@{
    ViewBag.Title = "Ürünler";
}

@using Mvc_Birkan.Models
@model List<Urunler>
<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            Ürünler
        </header>
        <table class="table table-striped table-advance table-hover">
            <thead>
                <ul class="nav pull-right top-menu">
                    <li>
                        <input type="text" class="form-control search" placeholder=" Arama Yap">
                    </li>
                </ul>

                <tr>
                    <!--<th><i class="icon-crop"></i> Ürün Adı</th>-->
                    <!--<th class="hidden-phone"><i class="icon-question-sign"></i> Descrition</th>-->
                    <th> Ürün Adı</th>
                    <th> Tedarikçi</th>
                    <th> Kategori</th>
                    <th> Birimdeki Miktar</th>
                    <th> Fiyat</th>
                    <th> Stok</th>
                    <th> Yeni Satış Miktarı</th>
                    <th> En Az Yeniden Satış Miktarı</th>
                    <th> Sonlandı</th>
                    <th colspan="2"><a href="/Urun/UrunEkle"role="button" class="btn btn-default btn-success">Ürün Kayıt</a></th>
                    
                    

                </tr>
            </thead>
            <tbody>
                
                @foreach (Urunler u in Model)
                {
                    <!--<tr>
                        <td><a href="#">Vector Ltd</a></td>
                        <td class="hidden-phone">Lorem Ipsum dorolo imit</td>
                        <td>12120.00$ </td>
                        <td><span class="label label-info label-mini">Due</span></td>
                        <td>
                            <button class="btn btn-success btn-xs"><i class="icon-ok"></i></button>
                            <button class="btn btn-primary btn-xs"><i class="icon-pencil"></i></button>
                            <button class="btn btn-danger btn-xs"><i class="icon-trash "></i></button>
                        </td>
                    </tr>-->
                    <tr>
                        <td class="hidden-phone">@u.UrunAdi</td>
                        @if (u.Tedarikciler == null)
                        {
                            <td> </td>
                        }
                        else
                        {
                            <td class="hidden-phone">@u.Tedarikciler.SirketAdi</td>
                        }
                        @if (u.Kategoriler == null)
                        {
                            <td> </td>
                        }
                        else
                        {
                            <td class="hidden-phone">@u.Kategoriler.KategoriAdi</td>
                        }

                        <td class="hidden-phone">@u.BirimdekiMiktar</td>
                        <td class="hidden-phone">@u.Fiyat</td>
                        <td class="hidden-phone">@u.Stok</td>
                        <td class="hidden-phone">@u.YeniSatis</td>
                        <td class="hidden-phone">@u.EnAzYenidenSatisMikatari</td>
                        @if (u.Sonlandi == true)
                        {
                            <td ><span class="label label-success label-mini" >Stokta Var</span></td>
                        }else
                        {
                        <td><span class="label label-info label-mini">Stokta Yok</span></td>
                        }
                        
                        <!--<td ><a href="/Urun/UrunEkle" class="btn btn-success btn-xs" role="button"><i class="icon-book"></i></a></td>-->
                        <td><a href="/Urun/Edit/@u.UrunID" class="btn btn-primary btn-xs" role="button"><i class="icon-pencil"></i></td>
                        <td><a href="/Urun/Sil/@u.UrunID" class="btn btn-danger btn-xs" role="button"><i class="icon-trash"></i></a></td>
                        
                    </tr>
                }

            </tbody>
        </table>
    </section>
</div>